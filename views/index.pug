.page.login-page
  .container
    .form-outer.text-center.d-flex.align-items-center
      .form-inner
        .logo.text-uppercase
          img(src='/img/logo.png' alt='person' style='width: 30%')
          span Pitching
          strong.text-primary Guru
        form.text-left.form-validate(method='POST' autocomplete='off' action='' style='text-align: center;')
          .form-group-material
            label(for='username') Username:
            input#username.form-control(type='text', placeholder='Username' name='username' value=(undefined===userinfo ? '' : userinfo.username))
          .form-group-material
            label(for='password') Password:
            input#password.form-control(type='password', placeholder='Password' name='password' value=(undefined===userinfo ? '' : userinfo.password))
          .form-group.text-center
            button.btn.btn-primary(type='submit') Submit
        small Do not have an account? 
        a.signup(href='/catalog/register') Signup
